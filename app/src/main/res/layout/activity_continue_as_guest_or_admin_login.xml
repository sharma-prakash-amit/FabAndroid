<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customAppThemeColor"
    tools:context="com.fab.kh2280.fab.ContinueAsGuestOrAdminLogin">

    <Button
        android:id="@+id/btnAdminLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@android:color/transparent"
        android:text="@string/AdminLogin"
        android:onClick="adminLogin"
        android:textColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/btnGuestContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAdminLogin"
        android:layout_below="@+id/btnAdminLogin"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:text="@string/GuestContinue"
        android:onClick="continueAsGuest"
        android:textColor="@color/cardview_light_background"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="269dp" />
</RelativeLayout>
