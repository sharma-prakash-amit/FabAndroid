<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customAppThemeColor"
    android:orientation="vertical"
    tools:context="com.fab.kh2280.fab.MainActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shoes_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="15dp">


        <TextView
            android:id="@+id/shoes_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:fontFamily="serif"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/menu_item1"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/cardview_light_background"
            android:typeface="monospace"
            android:visibility="visible" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tshirts_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_below="@id/shoes_view"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/tshirts_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardViewColor"
            android:fontFamily="serif"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/menu_item2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/cardview_light_background"
            android:typeface="monospace" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wallets_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_below="@id/tshirts_view"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/wallets_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:fontFamily="serif"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/menu_item3"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/cardview_light_background"
            android:typeface="monospace" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
